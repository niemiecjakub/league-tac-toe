# top-most EditorConfig file
root = true

[*]
# Core editor configuration properties
end_of_line = crlf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.cs]
# New line preferences
csharp_new_line_before_open_brace = all
csharp_new_line_before_members_in_object_initializers = true
csharp_new_line_before_members_in_anonymous_types = true
csharp_new_line_between_query_clauses = true

# Use language keywords instead of framework type names
dotnet_style_predefined_type_for_locals_parameters_members = true:suggestion
dotnet_style_predefined_type_for_member_access = true:suggestion

# 'var' usage
# Use 'var' when the type is apparent (e.g., int x = 5)
csharp_style_var_when_type_is_apparent = true:suggestion
# Do not use 'var' when the type is not apparent (e.g., var x = SomeMethodCall())
csharp_style_var_for_built_in_types = false:suggestion
# Use 'var' for discard variable
csharp_style_var_for_media_discards = true:suggestion

# Expression-bodied members
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_properties = true:suggestion
csharp_style_expression_bodied_accessors = true:suggestion

# Parentheses preferences
csharp_preferred_parenthesized_expression_preference = none:suggestion

# 'this.' or 'Me.' usage
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion

# Naming Rules (API projects often include 'Async' suffix for async methods)
# Configure for all async methods
dotnet_naming_rule.async_methods.severity = suggestion
dotnet_naming_rule.async_methods.required_suffix = Async
dotnet_naming_rule.async_methods.symbols = all_async_methods
dotnet_naming_rule.async_methods.style = pascal_case

dotnet_naming_symbols.all_async_methods.applicable_kinds = method
dotnet_naming_symbols.all_async_methods.applicable_accessibilities = *
dotnet_naming_symbols.all_async_methods.required_modifiers = async